          </form>
          <div class="card mt-5" style="width: 50%">
            <div class="card-body">
              <h5 class="card-title heading"></h5>
              <p class="card-text msg1"></p>
              <p class="card-text msg2"></p>
              <p class="card-text msg3"></p>
              <p class="card-text msg4"></p>
              <p class="card-text msg5"></p>
            </div>
          </div>
    </div>
    
